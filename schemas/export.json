{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Export Schema",
    "description": "A schema for defining export configurations.",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "exports"
    ],
    "properties": {
        "$schema": {
            "type": "string"
        },
        "var": {
            "type": "object",
            "additionalProperties": true,
            "required": [],
            "properties": {
                "name": {
                    "type": "string",
                    "minLength": 1
                },
                "version": {
                    "type": "string",
                    "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$",
                    "$comment": "Regex provided in the doc https://semver.org/ -> https://regex101.com/r/vkijKf",
                    "minLength": 1
                },
                "author": {
                    "type": "string",
                    "minLength": 1
                }
            }
        },
        "exports": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "type"
                ],
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "standalone-rp",
                            "bundled-map"
                        ]
                    }
                }
            }
        }
    }
}